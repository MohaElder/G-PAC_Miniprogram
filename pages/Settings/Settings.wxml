<!--pages/Settings/Settings.wxml-->
<view class="page-body">

 <view class="page__hd">
        <view class="page__title">
        Customize your preset here!
      </view>
        <view class="page__desc">{{announcement}}</view>
    </view>
  <view class="page-section">

<view class="weui-cells weui-cells_after-title">


  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__bd">Preset Name</view>
     <input class="weui-input" type="number" placeholder="Name..."/>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__bd">Subject Number</view>
     <input class="weui-input" type="number" placeholder="Number..." bindinput = "generateSubject" data-index = "{{index}}"/>
  </view>

</view>

<view class="weui-cells weui-cells_after-title" wx:for="{{subNum}}">

  <text>{{index + 1}} Subject(s)</text>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__bd">Subject Name</view>
     <input class="weui-input" type="number" placeholder="Score..." bindinput = "getSubScore"/>
  </view>

  <view class="weui-cell weui-cell_input">

    <view class="weui-cell__bd">Number of Levels</view>
     <input class="weui-input" type="number" placeholder="Score..." bindinput = "getSubScore"/>
  </view>

<view class="weui-cells weui-cells_after-title" wx:for="{levels}}">
 <picker bindchange="getSubtype" value="{{item.selectedValue}}" data-index = "{{index}}" range="{{item.type}}">
        <view class="picker enhanceView">
          Subject Type = {{item.type[item.selectedValue]}}
        </view>
      </picker>
</view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__bd">Subject Credit</view>
     <input class="weui-input" type="number" placeholder="Score..." bindinput = "getSubScore"/>
  </view>

      <picker bindchange="getSubtype" value="{{item.selectedValue}}" data-index = "{{index}}" range="{{item.type}}">
        <view class="picker enhanceView">
          Subject Type = {{item.type[item.selectedValue]}}
        </view>
      </picker>

      </view>

<button class="weui-btn enhanceButton" type="primary" open-type="getUserInfo" bindgetuserinfo='userInfo'>Submit</button>

</view>

</view>
