<mohaTitle>Calculate</mohaTitle>

<scroll-view class="horiScroller" scroll-x="true">
  <view class="scrollItem">全部</view>
  <view class="scrollItem">全部</view>
  <view class="scrollItem">全部</view>
  <view class="scrollItem">全部</view>
  <view class="scrollItem">全部</view>
</scroll-view>

<view class="cu-card dynamic {{isCard?'no-card':''}}" style="marin-top:20rpx; width:100%;">
  <view wx:for="1" wx:key class="cu-item shadow">
    <view class="cu-list menu menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar lg">
          <open-data type="userAvatarUrl"></open-data>
        </view>
        <view class='content flex-sub'>
          <view class='solid-bottom text-xl padding'>
            <text class="text-black">Hi! </text>
            <open-data type="userNickName"></open-data>
            <text class="text-black">, how would you like me to calculate your GPA?</text>
          </view>
        </view>
      </view>
    </view>
    <picker bindchange="changePreset" value="{{presetIndex}}" range="{{defaultPresets}}" range-key="displayName">
      <view class="picker">
        <view class="cu-card case">
          <view wx:for="{{1}}">
            <view class='image'>
            </view>
            <view class="cu-list menu menu-avatar  ">
              <view class="padding flex flex-direction">
                <button class="cu-btn bg-gradual-blue padding radius text-center shadow-blur margin-tb-sm lg" type="primary">In {{defaultPresets[presetIndex].displayName}} Way</button>
              </view>
            </view>
          </view>
        </view>
      </view>
    </picker>
  </view>
</view>

<view name="gpaSection">
  <view class="cu-card case" style="width:100%;">
    <view wx:for="{{1}}" wx:key class="cu-item shadow">
      <view class='image'>
        <view class="cu-form-group margin-top" wx:for="{{currentPreset.subjects}}">
          <view class="title">{{item.subjectName}}</view>
          <input type="number" placeholder="Score..." bindblur="getSubScore" data-index="{{index}}" />
          <picker bindchange="getSubLevel" value="{{item.selectedValue}}" data-index="{{index}}" range="{{item.level}}">
            <view class="picker">
              Level = {{item.level[item.selectedValue]}}
            </view>
          </picker>
        </view>
        <view class="padding flex flex-direction">
          <button class="cu-btn bg-gradual-green padding radius text-center shadow-blur margin-tb-sm lg" type="primary" open-type="getUserInfo" bindgetuserinfo='getUserInfo'>Go Ahead</button>
        </view>
      </view>
    </view>
  </view>
</view>

